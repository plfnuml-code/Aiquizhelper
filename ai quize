└──  document.getElementById("generateBtn").addEventListener("click", async () => {
  const lessonText = document.getElementById("lessonText").value.trim();
  if (!lessonText) return alert("กรุณากรอกเนื้อหาบทเรียนก่อน!");

  const outputDiv = document.getElementById("quizOutput");
  outputDiv.innerHTML = "Generating quiz... ⏳";

  try {
    const res = await fetch("/api/generate-quiz", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ text: lessonText })
    });
    const data = await res.json();
    outputDiv.innerHTML = data.result || "เกิดข้อผิดพลาด ❌";
  } catch(err) {
    outputDiv.innerHTML = "เกิดข้อผิดพลาด ❌";
    console.error(err);
  }
});

